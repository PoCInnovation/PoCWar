{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "app/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }]
    },
    "emulators": {
      "functions": {
        "port": "3000"
      },
      "database": {
        "port": "9000"
      },
      "hosting": {
        "port": "5000"
      }
    }
  }