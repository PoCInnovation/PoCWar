datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id         Int @default(autoincrement()) @id
    name       String
    email      String @unique
    challenges Challenge[]
}

model Challenge {
  id       Int @default(autoincrement()) @id
  name     String
  slug     String @unique
  tests    Test[]
  author   User @relation(fields: [authorId], references: [id])
  authorId Int
}

model Test {
  id          Int @default(autoincrement()) @id
  name        String
  out         String
  err         String
  ret         Int
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId Int
}